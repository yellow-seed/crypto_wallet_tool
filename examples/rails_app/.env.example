# PostgreSQL Database Configuration
# Copy this file to .env and update with your values
# The .env file will be automatically loaded by Docker Compose

# Database credentials
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=rails_app_development

# Rails database connection (should match POSTGRES_* values above)
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here
DB_HOST=db
DB_PORT=5432

# Note: For development purposes, you can use simple passwords,
# but it's recommended to use strong passwords for any deployed environment.

# Ethereum RPC Endpoint
# Set this to your Ethereum node URL (e.g., Infura, Alchemy, or local node)
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
